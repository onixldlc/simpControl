<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners
                android:radius="15dp"
                />
            <solid android:color="#252B41" />


            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

        </shape>
    </item>

    <item android:top="-5dp" android:left="-6dp">
        <shape>
            <corners
                android:topRightRadius="16dp"
                android:topLeftRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                />
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="#00161B27" />
        </shape>
    </item>
</layer-list>
